# AI SDR Configuration

# OpenAI API Key (required for CrewAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (required for Claude AI knowledge extraction)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Grok API Key (for market research and trend analysis)
GROK_API_KEY=your_grok_api_key_here

# LinkedIn API Credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993

# Google Sheets API
GOOGLE_SHEETS_CREDENTIALS_FILE=credentials.json
GOOGLE_SHEETS_TOKEN_FILE=token.json
GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id

# Database Configuration
DATABASE_URL=sqlite:///./ai_sdr.db
REDIS_URL=redis://localhost:6379

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# CrewAI Configuration
CREWAI_MAX_ITERATIONS=10
CREWAI_VERBOSE=True
